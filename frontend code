  <script>
    const showSignupBtn = document.getElementById('showSignupBtn');
    const landingSection = document.getElementById('landingSection');
    const signupSection = document.getElementById('signupSection');

    const refugeeBtn = document.getElementById('refugeeBtn');
    const volunteerBtn = document.getElementById('volunteerBtn');
    const refugeeForm = document.getElementById('refugeeForm');
    const volunteerForm = document.getElementById('volunteerForm');

    showSignupBtn.addEventListener('click', () => {
      landingSection.style.display = 'none';
      signupSection.style.display = 'block';
    });

    refugeeBtn.addEventListener('click', () => {
      refugeeBtn.classList.add('active');
      volunteerBtn.classList.remove('active');
      refugeeForm.classList.remove('hidden');
      volunteerForm.classList.add('hidden');
    });

    volunteerBtn.addEventListener('click', () => {
      volunteerBtn.classList.add('active');
      refugeeBtn.classList.remove('active');
      volunteerForm.classList.remove('hidden');
      refugeeForm.classList.add('hidden');
    });
  </script>
